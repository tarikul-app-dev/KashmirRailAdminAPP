<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="limited.it.planet.traintimingapp.activity.StatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Here"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_save_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Status"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/btn_delete_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Status"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
